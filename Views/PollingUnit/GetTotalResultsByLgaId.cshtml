@model BincomElectionProject.DTOs.LgaResultDto

@{
    ViewData["Title"] = "LGA Results";
}

<div class="container mt-5">
    <h2 class="mb-4">Total Results for LGA: @Model.LgaName</h2>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Party</th>
                <th>Total Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.TotalResultsByParty)
            {
                <tr>
                    <td>@result.Key</td>
                    <td>@result.Value</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/" class="btn btn-primary mt-3">Back to Home</a>
</div>
