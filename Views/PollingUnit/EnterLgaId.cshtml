@{
    ViewData["Title"] = "Enter LGA ID";
}

<div class="container mt-5">
    <h2 class="mb-4">Enter LGA ID</h2>

    <form asp-action="EnterLgaId" method="post">
        <div class="form-group">
            <label for="lgaId">LGA ID</label>
            <input type="number" id="lgaId" name="id" class="form-control" placeholder="Enter LGA ID" min="1" required>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>
